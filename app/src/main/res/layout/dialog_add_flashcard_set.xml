<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_card_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/add_flashcard_set_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="@string/add_flashcard_description"
        android:textColor="@color/app_black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/flashcard_set_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/light_gray"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/app_black"
        android:textColorHint="@color/app_black_hint" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/create_text" />

</LinearLayout>

